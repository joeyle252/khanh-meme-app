{{#if images}}
{{#each images}}
<img class="photo" data-toggle="modal" data-target="#exampleModalCenter" src="/uploads/{{{filename}}}"
    alt="{{{filename}}}" />


{{/each}}

{{/if}}

<script>
    console.log('khanh')

    const images = document.querySelectorAll('.photo');
    console.log('images', images)

    images.forEach(function (item) {
        console.log('item', item)
        item.addEventListener("click", (e) => {
            const imageCopy = e.target.cloneNode(true);
            const modalBody = document.querySelector('.modal-body');
            modalBody.appendChild(imageCopy);
        })
    })


</script>

